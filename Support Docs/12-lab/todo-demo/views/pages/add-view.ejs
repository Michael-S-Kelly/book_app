<!DOCTYPE html>
<html>
<head>
    <%- include('../layout/head') %>
</head>
<body>
    <%- include('../layout/header') %>
  <main>
    <section class="create-view container">
      <h3>Add a new task:</h3>
      <form id="create-form" action="/add" method="post">
        <fieldset>
          <input type="text" name="title" placeholder="task name">
          <textarea name="description" placeholder="task desc" cols="30" rows="10"></textarea>
          <input type="text" name="category" placeholder="category">
          <input type="text" name="contact" placeholder="contact">
          <input type="text" name="status" placeholder="status">
          <button type="submit">Add this task</button>
        </fieldset>
      </form>
    </section>
  </main>
</body>
</html>